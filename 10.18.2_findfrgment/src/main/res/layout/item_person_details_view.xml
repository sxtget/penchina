<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wuxianedu.wxhlcorelibrary.widget.RoundImageView android:id="@+id/head_id"
        android:layout_width="60dp" android:scaleType="centerCrop"
        android:layout_height="60dp" android:layout_marginTop="15dp"
        android:src="@drawable/head_nor" android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:id="@+id/ll_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/head_id">

        <TextView android:id="@+id/name_id" android:text="name"
            android:layout_width="match_parent" android:textColor="@android:color/black"
            android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="20sp"  android:layout_marginTop="5sp"/>
        <TextView android:id="@+id/description_id" android:textSize="15sp"
            android:layout_width="match_parent" android:text="description"
            android:layout_height="20dp"  android:layout_marginTop="5sp"  />

         <TextView android:id="@+id/time_id" android:textSize="20sp"
            android:layout_width="match_parent" android:text="1月前"
            android:layout_height="25dp"
            android:textColor="@android:color/darker_gray"
             android:layout_marginTop="5sp"/>
    </LinearLayout>

</RelativeLayout>
