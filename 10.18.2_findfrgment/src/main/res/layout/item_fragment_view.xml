<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wuxianedu.wxhlcorelibrary.widget.RoundImageView android:id="@+id/head_id"
        android:layout_width="60dp" android:scaleType="centerCrop"
        android:layout_height="60dp" android:layout_marginTop="20dp"
        android:src="@drawable/head_nor" android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"/>
    <TextView android:id="@+id/name_id" android:text="name"
        android:layout_width="match_parent" android:textColor="@android:color/black"
        android:layout_height="wrap_content" android:textStyle="bold"
        android:textSize="20sp" android:layout_toRightOf="@id/head_id"
        android:layout_alignTop="@id/head_id"/>
    <TextView android:id="@+id/description_id" android:textSize="20sp"
        android:layout_width="match_parent" android:text="description"
        android:layout_height="wrap_content"  android:layout_toRightOf="@id/head_id"
        android:layout_below="@+id/name_id"/>
    <LinearLayout android:orientation="horizontal" android:layout_toRightOf="@id/head_id"
        android:layout_width="wrap_content" android:layout_below="@id/description_id"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/fork_id" android:textSize="20sp"
            android:layout_width="wrap_content" android:layout_marginRight="16dp"
            android:layout_height="wrap_content" android:drawableLeft="@mipmap/img_ex_1"
            android:text="fork"/>
        <TextView android:id="@+id/star_id" android:textSize="20sp"
            android:layout_width="wrap_content" android:layout_marginRight="16dp"
            android:layout_height="wrap_content" android:drawableLeft="@mipmap/img_ex_2"
            android:text="star"/>
        <TextView android:id="@+id/watches_id" android:textSize="20sp"
            android:layout_width="wrap_content" android:layout_marginRight="16dp"
            android:layout_height="wrap_content" android:drawableLeft="@mipmap/img_ex_3"
            android:text="watches"/>
        <TextView android:id="@+id/language_id" android:textSize="20sp"
            android:layout_width="wrap_content" android:drawableLeft="@mipmap/img_ex_4"
            android:layout_height="wrap_content"
            android:text="language"/>
    </LinearLayout>

</RelativeLayout>